<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/shouyebeijing"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
                <TextView
                    android:text="我要乘车"
                    android:gravity="center_horizontal"
                    android:paddingTop="50dp"
                    android:textColor="#ffffff"
                    android:id="@+id/bybus_img"
                    android:background="@mipmap/chengche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="历史记录"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:textColor="#ffffff"
                    android:id="@+id/historicalrecord_img"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/lishijilu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="优惠活动"
                android:gravity="right|center_vertical"
                android:paddingRight="30dp"
                android:textColor="#ffffff"
                android:id="@+id/huodong_img"
                android:background="@mipmap/youhuihuodong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="客服反馈"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:paddingTop="30dp"
                android:id="@+id/feedback_img"
                android:layout_marginTop="5dp"
                android:background="@mipmap/kehufankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>