<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/siji01"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/weizhi_start"
        android:src="@mipmap/siji03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginStart="70dp" />
    <TextView
        android:id="@+id/start_txt"
        android:layout_marginLeft="5dp"
        android:text="顺途起点:"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/weizhi_start"
        android:layout_toRightOf="@+id/weizhi_start" />
    <EditText
        android:id="@+id/start_et"
        android:background="@null"
        android:hint="请输入出发地点"
        android:textColorHint="#cccccc"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/start_txt"
        android:layout_alignBottom="@id/start_txt"/>
    <RelativeLayout
        android:id="@+id/data_layout"
        android:background="@mipmap/siji02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weizhi_start"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/riqi_img"
            android:src="@mipmap/siji04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="70dp" />
        <TextView
            android:id="@+id/riqi_txt"
            android:layout_alignBottom="@id/riqi_img"
            android:layout_toRightOf="@id/riqi_img"
            android:text="乘车日期:"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/date_et"
            android:hint="请输入出发时间"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/riqi_txt"
            android:layout_alignBottom="@id/riqi_txt"/>
        <ImageView
            android:src="@mipmap/siji05"
            android:id="@+id/renshu_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/riqi_img"
            android:layout_alignStart="@+id/riqi_img"
            android:layout_marginTop="63dp" />
        <TextView
            android:id="@+id/renshu_txt"
            android:layout_alignBottom="@id/renshu_img"
            android:layout_toRightOf="@id/renshu_img"
            android:textColor="#ffffff"
            android:text="乘坐人数:"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/renshu_et"
            android:hint="请输入乘车人数"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/renshu_txt"
            android:layout_toRightOf="@id/renshu_txt"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/siji03"
            android:layout_below="@id/renshu_img"
            android:layout_alignStart="@id/renshu_img"
            android:layout_marginTop="63dp"
            android:id="@+id/weizhi_finsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="顺途终点:"
            android:layout_alignBottom="@id/weizhi_finsh"
            android:layout_toRightOf="@id/weizhi_finsh"
            android:textColor="#ffffff"
            android:layout_marginLeft="5dp"
            android:id="@+id/zhongdian_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/finsh_et"
            android:hint="请输入到达地点"
            android:textColorHint="#cccccc"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:layout_alignBottom="@id/zhongdian_txt"
            android:layout_toRightOf="@id/zhongdian_txt"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/lijifabu_btn"
        android:text="立即发布"
        android:textColor="#ffffff"
        android:background="@mipmap/siji06"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/data_layout"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="历史查询"
        android:textColor="#ffffff"
        android:id="@+id/history_txt"
        android:layout_alignStart="@id/lijifabu_btn"
        android:layout_below="@id/lijifabu_btn"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/owenrverify_txt"
        android:textColor="#ffffff"
        android:text="身份验证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lijifabu_btn"
        android:layout_alignEnd="@+id/lijifabu_btn" />
</RelativeLayout>