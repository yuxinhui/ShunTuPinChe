<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/yonghudenglu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/yonghulogin_txt"
        android:text="用户注册"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/yonghulogin_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@mipmap/login_shurukuang_bg"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="手机号码 :"
                android:textColor="#ffffff"
                android:layout_weight="0.5"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="输入您的手机号"
                android:background="@null"
                android:inputType="number"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/number" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@mipmap/login_shurukuang_bg"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:text="密  码 :"
                android:textColor="#ffffff"
                android:layout_weight="0.3"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:inputType="textPassword"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/password" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@mipmap/yanzhenmashuru"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:text="验证码 :"
                    android:textColor="#ffffff"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/yanzhengmaNum"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/getyanzhengma"
                android:text="获取验证码"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@mipmap/yanzhenma"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/checkchange"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/chezhu"
                android:text="车主"
                android:layout_marginRight="10dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/chengke"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:text="乘客"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <Button
            android:text="完成"
            android:textColor="#ffffff"
            android:background="@mipmap/denglu"
            android:id="@+id/regist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>